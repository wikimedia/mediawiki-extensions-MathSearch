{
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "31.0.0",
		"mediawiki/minus-x": "1.1.0",
		"php-parallel-lint/php-console-highlighter": "0.5.0",
		"php-parallel-lint/php-parallel-lint": "1.2.0",
		"phperf/xh-tool": "^1.1"
	},
	"scripts": {
		"lint": [
			"parallel-lint . --exclude vendor --exclude node_modules",
			"phpcs -p -s"
		],
		"test": [
			"@lint",
			"minus-x check ."
		],
		"fix-lint": "phpcbf",
		"fix": [
			"@fix-lint",
			"minus-x fix .",
			"phpcbf"
		]
	},
	"require": {
		"ext-dom": "*",
		"ext-simplexml": "*",
		"ext-xmlreader": "*"
	}
}
